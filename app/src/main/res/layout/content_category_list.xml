<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CategoryContentActivity"
    tools:showIn="@layout/activity_category_list">

    <TextView
        android:id="@+id/tv_is_category_list_empty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:drawableEnd="@drawable/ic_add_note_light_silver"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="@string/first_note_added"
        android:textSize="20sp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content_category_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@drawable/thumb_drawable"
        android:scrollbars="vertical" />
</LinearLayout>